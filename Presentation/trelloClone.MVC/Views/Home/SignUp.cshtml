@model CreateUserViewModel
@{
    ViewData["Title"] = "SignUp";
}

<h1>SignUp</h1>



<form asp-action="SignUp" method="post">
    <div class="form-group">
        <label for="username">Kullanıcı Adı:</label>
        <input type="text" class="form-control" id="username" name="username">
    </div> 
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="email">
    </div>
    <div class="form-group">
        <label for="password">Şifre:</label>
        <input type="password" class="form-control" id="password" name="password">
    </div>   
    <div class="form-group">
        <label for="passwordagain">Şifre Tekrar:</label>
        <input type="password" class="form-control" id="passwordagain" name="passwordagain">
    </div>
    <button type="submit" class="btn btn-primary">Üye Ol</button>
</form>

@section Scripts {
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire('@TempData["ErrorMessage"]', "Başarısız!", "error");

        </script>
    }
}